@page
@using Cotur.Abp.ApiKeyAuthorization.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Cotur.Abp.ApiKeyAuthorization.Web.Pages.ApiKeys.UpdateModal

@inject IHtmlLocalizer<ApiKeyAuthorizationResource> L
@{
    Layout = null;
}

@section scripts {
    <abp-script src="/Pages/ApiKeys/updateModal.js" />
}

<form data-ajaxForm="true" autocomplete="off" asp-page="/ApiKeys/UpdateModal" asp-route-id="@Model.Id">
    <abp-modal>
        <abp-modal-header title="@L["NewApiKey"].Value"></abp-modal-header>

        <abp-modal-body>

            <abp-input asp-for="ApiKey.Name" />
            <abp-input asp-for="ApiKey.Active" />
            <abp-input asp-for="ApiKey.ExpireAt" type="text" class="datepicker" />
            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
